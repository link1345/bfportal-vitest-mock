{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "strict": true,
    "paths": {
      "modlib": [
        "./code/modlib"
      ]
    },
    "typeRoots": [
      "./code/mod",
      "./node_modules/@types"
    ],
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "include": [
    "./src",
    "./code"
  ],
  "exclude": [
    "bfportal-vitest-mock.generated.ts",
    "test/vitest.config.ts",
    "dist"
  ]
}